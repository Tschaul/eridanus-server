{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "jsx": "react",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "emitDecoratorMetadata":true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "outDir": "build",
        "types": [
            "node",
            "mocha"
        ]
    },
    "exclude": [
        "build/**"
    ]
}